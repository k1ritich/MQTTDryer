</style>

<body>
    
    <%- include('partials/sidebar.ejs')%>
    <section id="content">
        <%- include('partials/navbar.ejs')%>
        <main class=""  style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            <%- include('partials/sub-navbar.ejs')%>
                <div class="">
            <% if (activeTab === 'dashboard') { %> <!-- Dashboard -->

                <%- include(dirname + '/views/Dashboard.ejs') %>

            <% } else if (activeTab === 'control-panel') { %> <!-- controlPanel -->

                <%- include(dirname + '/views/Control.ejs') %>

            <% } else if (activeTab === 'history') { %> <!-- History -->

                <%- include(dirname + '/views/History.ejs') %>

            <% } else if (activeTab === 'profile') { %> <!-- Users -->

                <%- include(dirname + '/views/Profile.ejs') %>

            <% } %>
                </div>
        </main>
    </section>
    <div class="position-fixed bottom-0 start-0 p-2" style="z-index: 3000;">
        <button 
            type="button" 
            style="background-color: transparent; border: 0px solid rgb(255, 179, 0); width: 40px; height: 40px;border-radius: 10px;"
            class="rounded me-2"
            id="SideliveToastBtn">
            <i style="color: rgb(255, 179, 0); font-size: 40px;" class="bi bi-question-circle"></i>
        </button>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 3000;">
        <div id="SideliveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000" data-bs-autohide="true">
            <div class="toast-header">
            <strong class="me-auto">Bootstrap</strong>
            <small>11 mins ago</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
            Hello, world! This is a toast message.
            </div>
        </div>
    </div>

    <script src="public/js/script.js"></script>
    <% if (activeTab === 'history') { %>
    <% } else { %>

    <% } %>

    <script>
        const popoverTriggerList = document.querySelectorAll('[data-bs-toggle="popover"]')
        const popoverList = [...popoverTriggerList].map(popoverTriggerEl => new bootstrap.Popover(popoverTriggerEl))
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        const toastTrigger = document.getElementById('liveToastBtn')
        const toastLiveExample = document.getElementById('liveToast')

        if (toastTrigger) {
        const toastBootstrap = bootstrap.Toast.getOrCreateInstance(toastLiveExample)
        toastTrigger.addEventListener('click', () => {
            toastBootstrap.show()
        })
        }

        const SidetoastTrigger = document.getElementById('SideliveToastBtn')
        const SidetoastLiveExample = document.getElementById('SideliveToast')

        if (SidetoastTrigger) {
        const SidetoastBootstrap = bootstrap.Toast.getOrCreateInstance(SidetoastLiveExample)
        SidetoastTrigger.addEventListener('click', () => {
            SidetoastBootstrap.show()
        })
        }
    </script>
    
</body>
